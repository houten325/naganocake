<div class="row">
  <h2>商品詳細</h2>
  <%= attachment_image_tag @item, :image, :full, 300, 300, fallback: 'no_image.jpg' %>

  <br><br><br><br>
  <tbody>
    <tr>
      <td>商品名</td>
      <td><%= @item.name %></td>
    </tr>
    <tr>
      <td>商品説明</td>
      <td><%= @item.introduction %></td>
    </tr>
    <tr>
      <td>ジャンル</td>
      <td><%= @item.genre.name %></td>
    </tr>
    <tr>
      <td>税込価格</td>
      <td><%= @item.price %>円</td>
    </tr>
    <tr>
      <td>販売ステータス</td>
      <td><% if @item.is_active == false %>
      販売中
      <% else %>
      販売停止中
      <% end %>
      </td>
    </tr>
  </tbody>

<%= link_to "編集する", edit_admins_item_path(@item), class: "btn btn-succes" %>
</div>