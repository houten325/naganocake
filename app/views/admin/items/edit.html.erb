<div class ="row">
  <h2>商品編集</h2>
  <%= form_with model: @item, url: admins_item_path,method: :patch do |f| %>
  
  <tbody>
    <tr>
      <th>商品画像</th>
      <td><%= f.file_field :item_image, class: "form-control" %></td>
    </tr>
    <tr>
      <th>商品名</th>
      <td><%= f.text_field :name, class: "form-control" %></td>
    </tr>
    <tr>
      <th>商品説明</th>
      <td><%= f.text_area :introduction, class: "form-control" %></td>
    </tr>
    <tr>
      <th>ジャンル</th>
      <td><%= f.collection_select :genre_id, Genre.all ,:id, :name, include_blank: "--選択してください--" %></td>
    </tr>
    <tr>
      <th>税抜価格</th>
      <td><%= f.text_field :price, class: "form-control" %></td>
    </tr>
    <tr>
      <th>販売ステータス</th>
      <td><%= f.select :is_active, [["販売中","false"],["販売停止中","true"]], include_blank: "--選択してください--" %></td>
    </tr>
  </tbody>
  
  <%= f.submit "更新" ,class: "btn btn-succes text-right" %>
  <% end %>
</div>