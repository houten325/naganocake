<div class ="row">
  <h2><%= @cutomer.last_name %>
  <%= @customer.first_name %>さんの会員情報編集</h2>
  
  <%= form_with model: @customer, url: admins_customer_path,method: :patch do |f| %>
  
  <table class="row table">
    <tr>
     <th><%= f.label :会員ID %></th>
     <td><%= f.text_field :id , class:"form-control"%></td>
    </tr>
    
    <tr>
      <th><%= f.label :氏名 %></th>
      <td><%= f.text_field :last_name , class:"form-control"%><br>
      <%= f.text_field :first_name , class:"form-control"%>
      </td>
    </tr>
    
    <tr>
      <th><%= f.label :フリガナ %></th>
      <td><%= f.text_field :last_name_kana , class:"form-control"%><br>
      <%= f.text_field :first_name_kana , class:"form-control"%>
      </td>
    </tr>
    
    <tr>
      <th><%= f.label :郵便番号 %></th>
      <td><%= f.text_field :potal_code , class:"form_control"%></td>
    </tr>
    
    <tr>
      <th><%= f.label :住所 %></th>
      <td><%= f.text_field :address , class:"form_control"%></td>
    </tr>
    
    <tr>
      <th><%= f.label :電話番号 %></th>
      <td><%= text_field :phone_number , class:"form_control"%></td>
    </tr>
    
    <tr>
      <th><%= f.label :メールアドレス %></th>
      <td><%= f.text_field :email , class:"form_control"%></td>
    </tr>
    
    <tr>
      <th><%= f.label :会員ステータス %></th>
      <td><%= f.select :is_deleted ,[["有効","false"]["退会","true"]], class:"form_control" %></td>
    </tr>
  </table>
 </div>
  
 <div class="row">
  <%= f.submit "変更を保存する"　,class: "btn btn-success" %>
 </div>
 <% end %>